{
  "name": "forgescript-extension",
  "displayName": "ForgeScript",
  "description": "Provides autocomplete and syntax highlighting for ForgeScript.",
  "version": "1.0.16",
  "publisher": "Zack-911",
  "license": "MIT",
  "icon": "src/icons/forgescript.webp",

  "engines": {
    "vscode": "^1.50.0"
  },

  "categories": ["Programming Languages"],

  "activationEvents": [
    "onLanguage:fs"
  ],

  "main": "dist/forgescript.js",

  "contributes": {
    "languages": [
      {
        "id": "fs",
        "aliases": ["ForgeScript", "fs"],
        "extensions": [".fs", ".fs.ts", ".fs.js"],
        "configuration": "./src/config/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fs",
        "scopeName": "source.fs",
        "path": "./src/config/fs.tmLanguage.json",
        "injectTo": ["source.js"],
        "embeddedLanguages": {
          "meta.embedded.block.fs": "fs"
        }
      }
    ],
    "iconThemes": [
      {
        "id": "forge-icon-theme",
        "label": "ForgeScript Icons",
        "path": "./src/config/icon-theme.json"
      }
    ]
  },

  "dependencies": {
    "undici": "^5.20.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "@types/vscode": "^1.100.0",
    "typescript": "^5.8.3",
    "vscode": "^1.1.37"
  },

  "scripts": {
    "build": "tsc",
    "dev": "tsc -w"
  }
}
