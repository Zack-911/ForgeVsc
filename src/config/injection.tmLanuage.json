{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ForgeScript Injection",
  "scopeName": "forgescript.inject.code",
  "injectionSelector": "L:string.template.js, L:string.template.ts, L:string.quoted.template.js, L:string.quoted.template.ts",
  "patterns": [
    {
      "name": "meta.forgescript.code.block",
      "begin": "`",
      "end": "`",
      "contentName": "source.fs",
      "patterns": [
        { "include": "source.fs" }
      ]
    }
  ]
}
